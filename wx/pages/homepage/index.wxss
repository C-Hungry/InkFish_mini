.card-item {
  font-size: 14px;
  padding: 16px;
  border-bottom: 1px solid #d7dde4;
}

.card-item-title {
  font-size: 16px;
  font-weight: 600;
}

.card-item-content {
  padding: 8px 0;
  color: #666;
}

.card-item-footer {
  display: flex;
  color: #666;
}

.card-item-footer-left {
  flex: 1;
}

.card-item-footer-right {
  text-align: right;
}