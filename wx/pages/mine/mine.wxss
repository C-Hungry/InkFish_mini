.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.options {
  margin-top: 100rpx; 
  display: block;
  width: 100%;
  font-size: 32rpx; 
}

.options-item {
  background-color: #f8f8f9;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid #dddee1;
}